<div class="container">
  <%= render "layouts/nav" %>
  <p id="notice"><%= notice %></p>

  <div class="d-flex justify-content-between align-items-center">
    <h2 class="font-weight-bold mb-5 text-green">Invoice <br>Records</h2>
    <%= link_to '<i class="fas fa-plus mr-3"></i>New Invoice'.html_safe, new_invoice_path, class: "btn bg-black text-white rounded-btn" %>
  </div>

  <table class="table table-hover mb-5">
    <thead class="bg-green text-white">
      <tr>
        <th>No.</th>
        <th>Date</th>
        <th>To</th>
        <th>Status</th>
        <th>Total</th>
        <th colspan="3" class="text-right">Actions</th>
      </tr>
    </thead>

    <tbody class="text-muted">
      <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.id %></td>
          <td><%= invoice.created_at.strftime('%d/%m/%Y') %></td>
          <td><%= invoice.project.client.name %></td>
          <td></td>
          <td><%= invoice.total %></td>
          <td class="text-right">
            <%= link_to 'Preview Invoice', invoice, class: "text-green mr-2", style: "text-decoration: underline;" %>
            <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, invoice, class: "btn text-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
