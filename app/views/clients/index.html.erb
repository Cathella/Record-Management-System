<%= render "layouts/nav" %>

<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1 class="font-weight-bold mb-5 text-primary">Client <br>Records</h1>
  <%= link_to '<i class="fas fa-plus mr-3"></i>New Client'.html_safe, new_client_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-hover mb-5" style="min-width: 690px">
    <thead class="text-muted thead-light">
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Location</th>
        <th>Payment</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>

    <tbody class="text-muted">
      <% @clients.each do |client| %>
        <tr>
          <td>
            <%= link_to client.name, client, class: "text-info" %>
          </td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
          <td><%= client.location %></td>
          <td><%= client.payment %></td>
          <td class="text-center">
            <%= link_to 'Show', client, class: "btn btn-info mr-2" %>
            <%= link_to 'Delete', client, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
          <!-- <td><%= link_to 'Edit', edit_client_path(client) %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
