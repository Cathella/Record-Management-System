<div class="container">
  <%= render "layouts/nav" %>
  <p id="notice"><%= notice %></p>

  <div class="d-flex justify-content-between align-items-center">
    <h2 class="font-weight-bold mb-5 text-green">Client <br>Records</h2>
    <%= link_to '<i class="fas fa-plus mr-3"></i>New Client'.html_safe, new_client_path, class: "btn bg-black text-white rounded-btn" %>
  </div>

  <div class="table-responsive">
    <table class="table table-hover mb-5" style="min-width: 690px">
      <thead class="text-white bg-green">
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Location</th>
          <th>Payment</th>
          <th colspan="3" class="text-right">Actions</th>
        </tr>
      </thead>

      <tbody class="text-muted">
        <% @clients.each do |client| %>
          <tr>
            <td>
              <%= link_to client.name, client, class: "text-green" %>
            </td>
            <td><%= client.phone %></td>
            <td><%= client.email %></td>
            <td><%= client.location %></td>
            <td><%= client.payment %></td>
            <td class="text-right">
              <%= link_to 'See client details', client, class: "text-green mr-2", style: "text-decoration: underline;" %>
              <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, client, class: "btn text-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
            <!-- <td><%= link_to 'Edit', edit_client_path(client) %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
