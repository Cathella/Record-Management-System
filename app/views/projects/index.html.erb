<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1 class="font-weight-bold mb-5">Projects <br>Tracker</h1>
  <%= link_to '<i class="fas fa-plus mr-3"></i>New Project'.html_safe, new_project_path, class: "btn btn-primary" %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Ref</th>
      <th>Description</th>
      <th>Site measurement</th>
      <th>Progress</th>
      <th>Type</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.ref_id %></td>
        <td><%= project.description %></td>
        <td><%= project.site_measurement %></td>
        <td><%= project.progress %></td>
        <td><%= project.type %></td>
        <td><%= project.cost %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

