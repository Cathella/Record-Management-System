<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1 class="font-weight-bold mb-5 text-primary">System<br>Users</h1>
  <%= link_to '<i class="fas fa-plus mr-3"></i>New Manager'.html_safe, new_admin_path, class: "btn btn-primary" %>
</div>

<table class="table mb-5">
  <thead class="thead-light">
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.username %></td>
        <td class="text-right"><%= link_to 'Delete', admin, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
