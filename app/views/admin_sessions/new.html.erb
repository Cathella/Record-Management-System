<div class="container">
  <div class="my-5 py-5">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <p class="text-uppercase text-center mt-5">Login</p>
        <div class="text-center">
          <h1 class="font-weight-bold mx-auto">Tidy</h1>
          <h4 class="mb-5 font-weight-bold mx-auto text-info">Client Records Management and Invoicing System</h4>
        </div>
        <%= form_tag admin_sessions_path do %>
          <div class="row">
            <div class="form-group col-md-12">
              <div class="field mb-3">
                <%= text_field_tag :username, params[:username], placeholder: "Username", class: "form-control py-4" %>
              </div>
            </div>
            <div class="form-group col-md-12">
              <div class="field mb-4">
                <%= password_field_tag :password, params[:password], placeholder: "Password", class: "form-control py-4" %>
              </div>
            </div>
            <div class="form-group col-md-12">
              <div class="actions">
                <%= submit_tag "Log In", class: "btn btn-info font-weight-bold rounded-btn w-100", style: "" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
  