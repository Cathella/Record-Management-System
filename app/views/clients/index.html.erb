<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1 class="font-weight-bold mb-5">Client <br>Records</h1>
  <%= link_to '<i class="fas fa-plus mr-3"></i>New Client'.html_safe, new_client_path, class: "btn btn-primary" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Location</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.phone %></td>
        <td><%= client.location %></td>
        <td><%= client.payment %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

