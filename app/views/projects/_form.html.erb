<%= form_with(model: project, local: true, class: "text-muted") do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :client_id, "Choose Client" %>
    <%= form.collection_select(:client_id, Client.all, :id, :name, {}, class: "custom-select") %>
  </div>

  <div class="field mb-3">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :site_measurement, "Site Measurement" %>
    <%= form.text_field :site_measurement, class: "form-control"%>
  </div>

  <div class="field mb-3">
    <%= form.label :progress, "Progress" %>
    <%= form.text_field :progress, class: "form-control"%>
  </div>

  <div class="field mb-3">
    <%= form.label :work_type, "Work Type" %>
    <%= form.select :work_type,  ['Wardrobe', 'TV Stand', 'Bed', 'Kitchen'], {}, class: "custom-select" %>
  </div>

  <div class="field mb-3">
    <%= form.label :status, "Status" %>
    <%= form.select :status,  ['Cancelled', 'Completed', 'In-progress'], {}, class: "custom-select" %>
  </div>

  <div class="field mb-3">
    <%= form.label :cost, "Project Cost" %>
    <%= form.text_field :cost, class: "form-control"%>
  </div>

  <div class="field mb-3">
    <%= form.label :assigned, "Assigned To" %>
    <%= form.text_field :assigned, class: "form-control"%>
  </div>

  <div class="actions">
    <%= form.submit "Create Project", class: "w-100 btn btn-primary" %>
  </div>
<% end %>
