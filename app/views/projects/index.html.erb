<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1 class="font-weight-bold mb-5 text-primary">Projects <br>Tracker</h1>
  <%= link_to '<i class="fas fa-plus mr-3"></i>New Project'.html_safe, new_project_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-hover mb-5" style="min-width: 690px">
    <thead class="text-muted thead-light">
      <tr>
        <th>Ref ID</th>
        <th>Progress</th>
        <th>Work Type</th>
        <th>Client</th>
        <th colspan="3" class="text-right">Actions</th>
      </tr>
    </thead>

    <tbody class="text-muted">
      <% @projects.each do |project| %>
        <tr>
          <td>
            <%= link_to project.ref_id, project, class: "text-info" %>
          </td>
          <td><%= project.progress %></td>
          <td><%= project.work_type %></td>
          <td><%= link_to project.client.name, class: "text-info" %></td>
          <td class="text-right">
            <%= link_to 'Show', project, class: "btn btn-info mr-2" %>
            <%= link_to 'Create Invoice', new_invoice_path, class: "btn btn-primary mr-2" %>
            <%= link_to 'Delete', project, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

