<div class="container">
  <%= render "layouts/nav" %>
  <p id="notice"><%= notice %></p>

  <div class="d-flex justify-content-between align-items-center">
    <h1 class="font-weight-bold mb-5 text-info">Projects <br>Tracker</h1>
    <%= link_to '<i class="fas fa-plus mr-3"></i>New Project'.html_safe, new_project_path, class: "btn bg-black text-white rounded-btn" %>
  </div>

  <div class="table-responsive">
    <table class="table table-hover mb-5" style="min-width: 690px">
      <thead class="text-muted thead-light">
        <tr>
          <th>Ref ID</th>
          <th>Name</th>
          <th>Status</th>
          <th>Work Type</th>
          <th>Client</th>
          <th>Assigned to</th>
          <th colspan="3" class="text-right">Actions</th>
        </tr>
      </thead>

      <tbody class="text-muted">
        <% @projects.each do |project| %>
          <tr>
            <td>
              <%= link_to project.id, project, class: "text-info" %>
            </td>
            <td>
              <%= link_to project.name, project, class: "text-info" %>
            </td>
            <td><%= project.status %></td>
            <td><%= project.work_type %></td>
            <td><%= project.client.name %></td>
            <td><%= project.assigned %></td>
            <td class="text-right">
              <%= link_to 'See project Details', project, class: "text-info mr-2", style: "text-decoration: underline;" %>
              <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, project, class: "btn text-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
