<%= link_to 'DOWNLOAD', invoice_path(@invoice, format: :pdf), class: "btn btn-primary my-2 my-sm-0 mx-4", style: "color: white;" %>
<%= link_to 'Back to Invoices', invoices_path, class: "btn btn-primary my-2 my-sm-0", style: "color: white;" %>

<table cellpadding="0" cellspacing="0" style="width: 100%; color: #212529; border-collapse: collapse; margin-bottom: 3rem">
  <tr class="top">
    <td colspan="4" style="border: 0; padding: .75rem;">
      <table style="width: 100%; color: #212529; border-collapse: collapse;">
        <tr>
          <td style="border: 0; padding: .75rem;">
            <h2 style="margin-top: 3rem">Decok Interiors</h2>
          </td>
          <td style="text-align: right; border: 0; padding: .75rem;">
            Invoice #: <b>00<%= @invoice.id %></b>
            <br>
            Created: <b><%= @invoice.created_at.strftime('%d/%m/%Y') %></b>
            <br>
            Due: <b><%= (@invoice.created_at + 1.month).strftime('%d/%m/%Y') %></b>
            <br>
            Status: 
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <tr class="information">
    <td colspan="4" style="padding: .75rem;">
      <table style="width: 100%; border-collapse: collapse;">
        <tr>
          <td style="border: 0; padding: .75rem;">
            <b><%= @invoice.bill_from_name %></b><br>
            Naalya, Uganda<br>
            <i class="far fa-envelope"></i> <%= @invoice.bill_from_email %><br>
            <i class="fas fa-phone"></i> 0393236050
          </td>
          <td style="text-align: right; border: 0; padding: .75rem;">
            <b><%= @invoice.project.client.name %></b><br>
            <%= @invoice.project.client.location %><br>
            <i class="far fa-envelope"></i> <%= @invoice.project.client.email %><br>
            <i class="fas fa-phone"></i> <%= @invoice.project.client.phone %>
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <tr style="background-color: #f8f9fa">
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">Project</td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">Price</td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">Qty</td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">Total</td>
  </tr>

  <tr class="item">
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">
      Ref: <%= @invoice.project.name %><br>
      <small style="color: #6c757d"><%= @invoice.project.description %></small>
    </td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">
      <%= @invoice.item_price %>
    </td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">
      x <%= @invoice.item_qty %>
    </td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">
      <%= @invoice.item_price * @invoice.item_qty %>
    </td>
  </tr>

  <tr>
    <td colspan="2" style="padding: .75rem; border-top: 1px solid #dee2e6"></td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6"><b>Subtotal</b></td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6"><%= @invoice.subtotal %></td>
  </tr>

  <tr>
    <td colspan="2" style="padding: .75rem; border: 0;"></td>
    <td style="padding: .75rem; border: 0;"><b>Discount (<%= @invoice.discount %>%)</b></td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">- <%= @invoice.discount_calculated %></td>
  </tr>

  <tr>
    <td colspan="2" style="padding: .75rem; border: 0;"></td>
    <td style="padding: .75rem; border: 0;"><b>VAT (<%= @invoice.tax %>%)</b></td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">+ <%= @invoice.tax_calculated %></td>
  </tr>

  <tr>
    <td style="padding: .75rem; border: 0;" colspan="2"></td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6"><b>TOTAL:</b></td>
    <td style="padding: .75rem; border-top: 1px solid #dee2e6">
      <b><%= @invoice.total %></b>
    </td>
  </tr>

  <tr>
    <td colspan="4" style="padding: .75rem; background-color: #f8f9fa; border-top: 1px solid #dee2e6">
      Notes:<br>
      <small style="color: #6c757d"><%= @invoice.notes %></small>
    </td>
  </tr>
</table>
